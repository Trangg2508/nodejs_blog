<div class="mt-4">
    <div class="mb-4 fs-1 text-center">{{title}}</div>
    
    <div class="row">

{{#each courses}}
        <div class="col-sm-6 col-lg-3">
            <div class="card card-item">
                <img src="{{this.image}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Mua khoa hoc</a>
                </div>
            </div>
        </div>
{{/each}}

    </div>
</div>